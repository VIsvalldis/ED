#include <stdio.h>
#include <math.h>

int main ()
{
	int n = 3;
	double deg=1, comp=0, val=0, r=-1, k=1,val_k=0;			
	double a =10;

	printf (" enter the number of significant numbers\n");
	printf (" maximum accuracy of one hundred characters\n");
	scanf ("%d", &n);
	for (int i=1; i <= n; i++)
	{
		deg= deg* a;
	}
	deg= 1/deg;
	//printf ("n =%.100f\n", deg);
	if ( n>0)
	{
		do
		{
			r=r+2;
			k=k+2;
			val= val+4/r;			//val - переменная итогового занчения пи
			val= val-4/k;
			comp= val-val_k;			//comp переменная сравнения точности
			comp = fabs ( comp);
			val_k = val_k- val;
			val_k =fabs( val_k );
			printf ("val_k= %f\n", val_k);
			printf ("comp= %.100f\n", comp);
		} while (comp > deg);
		printf ("pi =%.100f\n", val);
	}
	else
	{
		printf ("The number of significant numbers must be a natural number\n");
	}
	return 0;
}
