#include <stdio.h>
#include <math.h>

int main ()
{
	int n = 3, r=0, k=1;
	double deg=1, comp=0, val=0;			
	double a =10;

	printf (" enter the number of significant numbers\n");
	printf (" maximum accuracy of one hundred characters\n");
	scanf ("%d", &n);
	for (int i=1; i <= n; i++)
	{
		deg= deg* a;
	}
	deg= 1/deg;
								//printf ("%.100f", deg);
	if ( n>0)
	{
		do
		{
			r=r+2;
			k=k+2;
			comp=(1/r)-(1/k);
			val= val+4/r;
			val= val-4/k;
		} while (comp < deg);
		printf ("%.100f", val);
	}
	else
	{
		printf ("The number of significant numbers must be a natural number\n");
	}
	return 0;
}
